{
	"name": "six-cities",
	"version": "4.0.0",
	"description": "Проект «Шесть городов» от HTML Academy",
	"keywords": ["rest", "api", "node.js"],
	"main": "./dist/main.js",
	"scripts": {
		"start": "npm run build && node ./dist/main.js",
		"build": "npm run clean && npm run compile",
		"clean": "rm -rf dist",
		"compile": "tsc -p tsconfig.json",
		"lint": "biome ci src/",
		"test": "node --loader tsx --no-warnings --test ./**/*.test.ts",
		"test:watch": "npm run test -- --watch"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.2.2",
		"@types/node": "20.7.1",
		"typescript": "5.2.2",
		"tsx": "^3.13.0"
	},
	"type": "module",
	"engines": {
		"node": ">=18.18.0",
		"npm": ">=9"
	}
}
